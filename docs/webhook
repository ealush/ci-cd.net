HOOK=$1
: ${HOOK:="$WEBHOOK"}
if [ -z "$HOOK" ]; then
	echo "Webhook URL not found"
	exit 0
fi

JSON=$2
: ${JSON:=".webhook.json"}

if [ ! -f $JSON ]; then
    echo "${JSON} File not found"
	exit 1
fi

(echo "cat <<EOF"; cat $JSON; echo EOF) | sh > temp-webhook-processed.json
curl -X POST -H 'Content-type: application/json' --data @temp-webhook-processed.json $HOOK
rm temp-webhook-processed.json
